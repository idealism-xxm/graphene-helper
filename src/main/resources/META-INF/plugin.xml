<idea-plugin url="https://github.com/idealism-xxm">
    <id>cn.idealismxxm.graphene-plugin</id>
    <name>GraphenePlugin</name>
    <vendor url="https://github.com/idealism-xxm">idealism-xxm</vendor>

    <description><![CDATA[
    <p>Improve your experience when using grahpene.</p>
    <h3>Features:</h3>
    <ul>
        <li>Useful navigation between declaration and resolver in same class</li>
        <li>Useful navigation from mutation to it's field in schema.py</li>
    </ul>
    ]]></description>

    <change-notes><![CDATA[
      <p>0.0.7:</p>
      <ul>
        <li>Support generate resolver for resolvable field</li>
        <li>Support generate mutation function for mutation subclass</li>
      </ul>
      <p>0.0.6:</p>
      <ul>
        <li>Only navigate for instance of graphene type</li>
      </ul>
      <p>0.0.5:</p>
      <ul>
        <li>Support navigate between declaration and resolver in same class</li>
        <li>Support navigate from mutation to it's field in schema.py</li>
      </ul>
    ]]></change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->
    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.python</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <codeInsight.lineMarkerProvider language="Python" implementationClass="cn.idealismxxm.grapheneplugin.navigation.provider.ResolvableTypeLineMarkerProvider" />
        <codeInsight.lineMarkerProvider language="Python" implementationClass="cn.idealismxxm.grapheneplugin.navigation.provider.ResolverLineMarkerProvider" />
        <codeInsight.lineMarkerProvider language="Python" implementationClass="cn.idealismxxm.grapheneplugin.navigation.provider.MutationLineMarkerProvider" />
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="cn.idealismxxm.grapheneplugin.generation.action.GenerateResolverAction"
                class="cn.idealismxxm.grapheneplugin.generation.action.GenerateResolverAction"
                text="Generate Resolver"
                description="Generate resolver for instance of resolvable type">
            <add-to-group group-id="GenerateGroup" anchor="last"/>
        </action>
        <action id="cn.idealismxxm.grapheneplugin.generation.action.GenerateMutationAction"
                class="cn.idealismxxm.grapheneplugin.generation.action.GenerateMutationAction"
                text="Generate Mutation"
                description="Generate mutation function for mutation type">
            <add-to-group group-id="GenerateGroup" anchor="last"/>
        </action>
    </actions>
</idea-plugin>